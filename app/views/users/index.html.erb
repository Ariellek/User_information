<h1>Dogs#index</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Actions</th>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.first_name %></td>
      <td>
        <%= link_to "Show", user_path(user) %> |
        <%= link_to "Edit", edit_user_path(user) %> |
        <%= link_to "Delete",
                      user_path(user),
                      method: :delete,
                      data: { confirm: 'Are you sure?' }%>
      </td>
    </tr>
  <% end %>
</table>

<%= link_to 'New User', new_user_path %>